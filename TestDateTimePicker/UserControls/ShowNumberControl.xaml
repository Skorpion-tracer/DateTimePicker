<UserControl x:Class="TestDateTimePicker.UserControls.ShowNumberControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestDateTimePicker.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label x:Name="numberDisplay" Height="50" Width="200"
               Background="LightBlue"/>

            <Button Width="60" Height="40" Margin="5" Content="+"
                    Click="Button_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
